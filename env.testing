# Testing Environment Configuration
# Copy this to .env for internal testing without external APIs

# Database
DATABASE_URL=postgresql://assistant:assistant@db:5432/assistant
REDIS_URL=redis://redis:6379/0

# LLM Configuration (optional for testing)
OPENAI_API_KEY=your_openai_api_key_here
LLM_BASE_URL=
LLM_MODEL=gpt-4o

# Mock Mode - Set to true to use mock clients
MOCK_MODE=true
MOCK_TWILIO=true
MOCK_SENDGRID=true

# Twilio Configuration (not used in mock mode)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_CALLER_ID=+1234567890

# Email Configuration (not used in mock mode)
SENDGRID_API_KEY=your_sendgrid_api_key

# Google Calendar OAuth (optional for testing)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Security
OAUTH_ENC_KEY=base64:your_32_byte_encryption_key_here
SECRET_KEY=your_secret_key_for_rsvp_tokens

# Scheduler
SCHEDULER=apscheduler

# Base URL for webhooks
BASE_URL=http://localhost:8000

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Development
NGROK_AUTHTOKEN=your_ngrok_auth_token

# Logging
LOG_LEVEL=INFO
