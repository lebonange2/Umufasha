# Database
DATABASE_URL=postgresql://assistant:assistant@db:5432/assistant
REDIS_URL=redis://redis:6379/0

# LLM Configuration - Local models only (Ollama)
# No API keys needed - uses local Ollama models running on GPU
LLM_PROVIDER=local
LLM_MODEL=llama3:latest
LLM_LOCAL_URL=http://localhost:11434/v1

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_CALLER_ID=+1234567890

# Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key

# Google Calendar OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Security
OAUTH_ENC_KEY=base64:your_32_byte_encryption_key_here
SECRET_KEY=your_secret_key_for_rsvp_tokens

# Scheduler
SCHEDULER=apscheduler

# Base URL for webhooks
BASE_URL=https://your-domain.com

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Development
NGROK_AUTHTOKEN=your_ngrok_auth_token

# Logging
LOG_LEVEL=INFO
