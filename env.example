# Database
DATABASE_URL=postgresql://assistant:assistant@db:5432/assistant
REDIS_URL=redis://redis:6379/0

# LLM Configuration
# Note: API keys can be set as environment variables instead of in .env file
# For Claude: export ANTHROPIC_API_KEY=sk-ant-your-key-here
# For OpenAI: export OPENAI_API_KEY=sk-your-key-here
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY is read from environment variable, not .env file
LLM_BASE_URL=
LLM_MODEL=gpt-4o
LLM_PROVIDER=openai  # openai, anthropic, or custom (default provider, can be overridden in UI)

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_CALLER_ID=+1234567890

# Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key

# Google Calendar OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Security
OAUTH_ENC_KEY=base64:your_32_byte_encryption_key_here
SECRET_KEY=your_secret_key_for_rsvp_tokens

# Scheduler
SCHEDULER=apscheduler

# Base URL for webhooks
BASE_URL=https://your-domain.com

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Development
NGROK_AUTHTOKEN=your_ngrok_auth_token

# Logging
LOG_LEVEL=INFO
