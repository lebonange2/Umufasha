# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-5

# LLM Backend Selection (openai|http)
LLM_BACKEND=openai

# Custom HTTP LLM endpoint (if using http backend)
LLM_HTTP_URL=http://localhost:8000/v1/chat/completions
LLM_HTTP_MODEL=local-model

# STT Backend Selection (whisper_local|vosk|whisper_api)
STT_BACKEND=whisper_local

# Whisper Local Model Size (tiny|base|small|medium|large)
WHISPER_MODEL_SIZE=base

# Vosk Model Path (if using vosk)
VOSK_MODEL_PATH=models/vosk-model-small-en-us-0.15

# Audio Settings
SAMPLE_RATE=16000
CHANNELS=1
VAD=true

# Autosave interval (seconds)
AUTOSAVE_INTERVAL=30

# Semantic similarity threshold for deduplication (0.0-1.0)
DEDUPE_THRESHOLD=0.85
